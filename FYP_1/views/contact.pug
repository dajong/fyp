extends base

block content
  main
    section.vh-75
      .container-fluid.h-custom
        .row.d-flex.justify-content-center.align-items-center.h-100
          .col-md-9.col-lg-3.col-xl-5
            img.img-fluid(src="/img/message.jpeg", alt="Sample image")
          .col-md-8.col-lg-9.col-xl-4.offset-xl-1
            form(class="form--contactAdmin")
              h1.my-5 Contact Us
              // Name input
              .form-outline.mb-4
                input.form-control.form-control-lg(type="text", id="name" placeholder="Enter your name" required)
                label.form-label(for="name") Your Name
              // Email input
              .form-outline.mb-4
                input.form-control.form-control-lg(type="email", id="email" placeholder="Enter a valid email address" required)
                label.form-label(for="email") Your Email
              // Subject input
              .form-outline.mb-4
                input.form-control.form-control-lg(type="text", id="subject" placeholder="Enter subject" required)
                label.form-label(for="subject") Subject
              // Message input
              .form-outline.mb-3
                textarea.form-control.form-control-lg(id="message", rows="5", placeholder="Enter your message" required)
                label.form-label(for="message") Your Message
              .text-center.text-lg-start.mt-4.pt-2
                button.btnn.btn--green.btn-xsmall(style="padding-left: 2.5rem; padding-right: 2.5rem;", type="submit") Send Query