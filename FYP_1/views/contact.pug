extends base

block content
  main
    div(class="w-75 mx-auto my-5")
      h2(class="my-3") Contact Us
      form(class="form--contactAdmin")
        div.mb-3
          label.form-label(for='email') Email address
          input#email.form-control(type='email', placeholder='you@example.com', required)
          
        div.mb-3
          label.form-label(for='name') Name
          input#name.form-control(type='text', placeholder='John Smith', required)

        div.mb-3
          label.form-label(for='subject') Subject
          input#subject.form-control(type='text', placeholder='Subject', required)

        div.mb-3
          label.form-label(for='message') Message
          textarea#message.form-control(rows="3", required)
        div
          button(type="submit" class="btn btn-success") Send