extends base

block content
  main
    div(class="w-75 mx-auto my-5")
      h2(class="my-3") Forgot Password
      form(class="form--forgetPassword")
        div.mb-3
          label.form-label(for='email') Email address
          input#email.form-control(type='email', placeholder='you@example.com', required)

        div
          button(type="submit" class="btn btn-success") Send Link