extends base

block content
  main
    div(class="w-75 mx-auto my-5")
      h1.heading-secondary.ma-bt-md Create Rental Property
      form(class="form--createRentalProperty")
        div.mb-3
          label.form__label(for='address') Address
          input#address.form__input(type='text', required)

        div.mb-3
          label.form__label(for='ownerEmail') Owner Email
          input#ownerEmail.form__input(type='text', required)

        div.mb-3
          label.form__label(for='city') City
          select(class="form__input", arial-label="city", name="city" id="city")
            each city in cities
                option(value=`${city}`)= `${city}`

        div.mb-3
          label.form__label(for='listingNum') Listing Number
          input#listingNum.form__input(type='number', required)

        div.mb-3e
          label.form__label(for='propertyStyle') Property Style
          select(class="form__input", arial-label="propertyType", name="propertyStyle" id="propertyStyle")
            each pType in propertyTypes
                option(value=`${pType}`)= `${pType}`

        div.mb-3
          label.form__label(for='garageType') Garage Type
          select(class="form__input", arial-label="garageType", name="garageType" id="garageType")
            each gType in garageTypes
                option(value=`${gType}`)= `${gType}`

        div.mb-3
          label.form__label(for='garageSize') Garage Size
          input#garageSize.form__input(type='number', required)

        div.mb-3
          label.form__label(for='berRating') Ber Rating
          select(class="form__input", arial-label="berRating", name="berRating" id="berRating")
            each rating in berRating
                option(value=`${rating}`)= `${rating}`

        div.mb-3
          label.form__label(for='squareFeet') Square Feet
          input#squareFeet.form__input(type='number', required)
        
        div.mb-3
          label.form__label(for='lotSize') Lot Size
          input#lotSize.form__input(type='text', required)
          
        div.mb-3
          label.form__label(for='numBedroom') Number of Bedrooms
          input#numBedroom.form__input(type='number',required)

        div.mb-3
          label.form__label(for='numBathroom') Number of Bathrooms
          input#numBathroom.form__input(type='number', required)

        div.mb-3
          label.form__label(for='rent') Rent Price
          input#rent.form__input(type='number', step="0.01", min=0, required)

        div.mb-3
          label.form__label(for='securityDeposit') Deposit Price
          input#securityDeposit.form__input(type='number', step="0.01", min=0,required)

        div.mb-3
          label.form__label(for='description') Description
          textarea#description.form__input(rows="3", required)

        div.mb-3
          .form__group.form__photo-upload
              input.form__upload(type='file', accept='image/*', id='imageCover', name='imageCover' required)
              label(for='imageCover') Upload Property Image Cover

        button(type="submit" class="btnn btn--green") Create 