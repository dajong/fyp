extends baseEmail

block content
  p Hi #{firstName},
  p Someone has place a higher on your bid (#{address})
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${content}`, target='_blank') Place bid now!
  p If you didn't want to place a bid again, please ignore this email!
