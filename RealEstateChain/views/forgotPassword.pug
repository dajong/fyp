extends base

block content
  main
    div(class="w-75 mx-auto my-5")
      h1(class="my-5") Forgot Password
      form(class="form--forgetPassword")
        div.form__group.mb-4
          label.form__label(for='email') Email address
          input#email.form__input(type='email', placeholder='you@example.com', required)

        div
          button(type="submit" class="btnn btn--green") Send Link